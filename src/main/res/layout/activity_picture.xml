<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PictureActivity">

    <ImageView
        android:id="@+id/cancelButton"
        android:layout_width="55dp"
        android:layout_height="70dp"
        android:src="@drawable/cancel"
        app:layout_constraintStart_toStartOf="@+id/gamePanelView"
        app:layout_constraintTop_toTopOf="@+id/gamePanelView" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/gamePanelView"
        android:name="com.ingilizceevi.pickthepicture.GamePanel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout="@layout/fragment_game_panel" />

</androidx.constraintlayout.widget.ConstraintLayout>